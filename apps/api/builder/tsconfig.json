{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "lib": ["ES2022", "DOM", "DOM.Iterable"],
      "moduleResolution": "Bundler",
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true,
      "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
  }
  